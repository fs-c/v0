{
  "env": {
      "es6": true,
      "node": true
  },
  "extends": "eslint:recommended",
  "rules": {
      "indent": [
          "error",
          2
      ],
      "linebreak-style": [
          "off",
          "unix"
      ],
      "quotes": [
          "error",
          "single"
      ],
      "semi": [
          "error",
          "always"
      ]
  },
  "parserOptions": {
      "ecmaVersion": 8
  }
}